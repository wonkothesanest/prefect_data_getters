[Unit]
Description=Prefect Jira Updater Flow
After=prefect-worker.service

[Service]
WorkingDirectory=/media/dusty/TB2/workspace/omnidian/prefect_data_getters
ExecStart=/media/dusty/TB2/workspace/omnidian/prefect_data_getters/env/bin/prefect flow serve --cron "0 * * * *" /media/dusty/TB2/workspace/omnidian/prefect_data_getters/src/datagetters/jira_backup.py:jira_backup_flow --name jira-backup-deployment
Restart=always
User=dusty

RestartSec=3
StartLimitIntervalSec=60
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
